<div class="wrapper">
  <div class="calculator">
    <h1>Pazudora EVO Calculator</h1>
    <div class="search-input-wrapper">
      <input type="search" class="typeahead" placeholder="Search by Monster" id="search-bar" autocomplete="off" required>
      <span class="clear-input" id="clearSearchInput"></span>
    </div>

    <div class="monster-info"></div>

    <div class="current-exp-wrapper">
      <input type="number" min="0" inputmode="numberic" pattern= "[0-9]*" id="current-exp" autocomplete="off" required>
      <label>Current Exp</label>
      <span class="clear-input" id="clearRemainingEXP"></span>
    </div>

    <div class="results">
      <div class="remaining-exp"></div>
      <div class="evolutions"></div>
    </div>
  </div>
</div>